#!/usr/bin/env groovy

pipeline {
    agent none
    stages {
        stage('Docker from hub') {
            agent {
                docker { image 'golang:latest'}
            }
            steps {
                sh 'go version'
            }
        }
        stage('Docker from dockerfile') {
            agent {
                dockerfile {
                    filename 'Dockerfile'
                    dir 'ci/jenkins'
                } 
            }
            steps {
                sh "echo 'Hello, motherfucker'"
            }
        }
    }
}
